</div>

<div>
  <div id="filters">
    <div id="checkboxes">
      <% fields.each do |key, field| %>
        <label for='checkbox-<%= key %>'>
          <input type='checkbox' checked id='checkbox-<%= key %>' /><%= field %></label>
      <% end %>
    </div>
  </div>
  <div id="styles">
    <label for='light'>
      Light
      <input id='light' type='radio' name='styles' value='light' checked />
    </label>
    <label for='dark'>
      Dark
      <input id='dark' type='radio' name='styles' value='dark' />
    </label>
  </div>
</div>

<table class="table table-striped sticky-header">
  <thead>
  <tr>
    <th scope="col">Highlight #</th>
    <th scope="col">Temperature</th>
    <th scope="col">Track Temperature</th>
    <th scope="col">Remaining</th>
    <th scope="col">Weather</th>
    <th scope="col">Trackstatus</th>
  </tr>
  <tr>
    <td><input value='29,27,50,37,32,78,57' id="fav" /></td>
    <td id="temp"></td>
    <td id="tracktemp"></td>
    <td id="time"></td>
    <td id="weather"></td>
    <td id="state"></td>
  </tr>
</table>
<table class="table">
  <thead id="tableLabels">
  </thead>
  <tbody id="data">
  </tbody>
</table>