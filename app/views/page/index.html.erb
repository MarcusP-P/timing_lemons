<%
  fields = {
      number: '#',
      place: 'P',
      placeInClass: 'PIC',
      lastLap: 'Last',
      gap: 'Gap',
      interval: 'Int',
      classGap: 'ClassGap',
      classInterval: 'ClassInt',
      sectorOne: 'S1',
      sectorTwo: 'S2',
      sectorThree: 'S3',
      state: 'State',
      driver: 'Driver',
      team: 'Team',
      laps: 'Laps',
      stops: 'Stops',
      best: 'Best',
      bestSectorOne: 'BS1',
      bestSectorTwo: 'BS2',
      bestSectorThree: 'BS3'
  }
%>

